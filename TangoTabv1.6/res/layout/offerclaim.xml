<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/offer_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/offer_top" >

        <!--
            <ProgressBar
                android:id="@+id/progressBarOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuRL"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" >

        <RelativeLayout
            android:id="@+id/myoffersRL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:clickable="true" >

            <Button
                android:id="@+id/myoffersMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mydeals"
                android:clickable="false" />

            <TextView
                android:id="@+id/myoffersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myoffersMenuButton"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:singleLine="true"
                android:text="My Offers"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nearmeRL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/myoffersRL"
            android:clickable="true" >

            <Button
                android:id="@+id/nearmeMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/myoffersMenuButton"
                android:background="@drawable/places"
                android:clickable="false" />

            <TextView
                android:id="@+id/myoffersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nearmeMenuButton"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:singleLine="true"
                android:text="Near Me"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchRL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/nearmeRL"
            android:clickable="true" >

            <Button
                android:id="@+id/searchMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/search"
                android:clickable="false" />

            <TextView
                android:id="@+id/myoffersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchMenuButton"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:singleLine="true"
                android:text="Search"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settingsRL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/searchRL"
            android:clickable="true" >

            <Button
                android:id="@+id/settingsMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/settings"
                android:clickable="false" />

            <TextView
                android:id="@+id/myoffersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingsMenuButton"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:singleLine="true"
                android:text="Settings"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/menuRL"
        android:layout_below="@id/offer_header"
        android:background="#FFFFE0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/greenbg1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/businessName"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/map"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/mapiconclick"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2.91" >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/locationrestaddress"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:text="address"
                        android:maxLines="4"
                        android:layout_marginRight="2dp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/cusinetype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="type"
                        android:textColor="#000000"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/dealname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:text="name"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/dealdescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/dealrestrictions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/greenbg2" >

                <TextView
                    android:id="@+id/dealDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dealTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/clmwantit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/claimclick" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>